<div class="container">	
	<div class="jumbotron"> 
		<img src="/assets/img/burger.png"> 
		<h1>Eat-Da-Burger!</h1>
	</div>

	{{!-- burger list --}}
	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<h3>BURGERS TO DEVOUR!</h3>
			<div class="panel-panel default">
				<ul class="list-group">
				{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form action="/burgers/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default btn-lg" type="submit">Devour It!</button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	</div>

  {{!-- devoured burgers --}}
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<h3>ALREADY DEVOURED!</h3>
			<div class="panel panel-default">
				<ul class="list-group">
				{{#each burgers}}
					{{#if this.devoured}}
					<li class="list-group-item">
						<p class="lead">{{this.burger_name}}</p>
					</li>
					{{/if}}
				{{/each}}
				</ul>
			</div>
		</div>
	</div>

  {{!-- add burgers --}}
	<div class="col-md-6 col-md-offset-3">
		<h4>Add a delicious burger!</h4>
		<form class="create-update-form" action="/burgers" method="POST">
			<div class="form-group">
				<input class="form-control input-lg" type="text" name="user_burger">
			</div>
			<button class="btn btn-default btn-lg" type="submit">SUBMIT</button>
		</form>
	</div>
</div>